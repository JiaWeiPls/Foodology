<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.google.firebase.samples.apps.mlkit.Register">

    <ImageView
        android:id="@+id/elipse"
        android:layout_width="match_parent"
        android:layout_height="396dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-160dp"
        android:scaleY="-1"
        android:src="@drawable/ic_elipse_orange" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:rotation="15"
        android:src="@drawable/foodology_removebg_preview__1_" />

    <ImageView
        android:id="@+id/charPNG"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/kindpng_1214636" />

    <View
        android:id="@+id/panelShadow"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@id/charPNG"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="118dp"
        android:layout_marginRight="118dp"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/recipe_panel_shadow" />

    <View
        android:id="@+id/panel"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="80dp"
        android:layout_alignBottom="@id/charPNG"
        android:background="@drawable/recipe_panel" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/welcome"
        android:textColor="@color/light_blue"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/your_name"
        android:textColorHint="@color/dark_blue"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:fontFamily="@font/roboto_regular"
        android:layout_below="@id/tv_subtitle"
        android:background="@drawable/et_custom"
        android:layout_marginTop="-15dp"
        android:textColor="@color/dark_blue"
        android:textSize="15sp"/>

    <View
        android:id="@+id/line_name"
        android:layout_width="918dp"
        android:layout_height="1dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/et_name"
        android:layout_marginTop="-5dp"
        android:background="@drawable/login_line" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/e_mail"
        android:textColorHint="@color/dark_blue"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="15dp"
        android:fontFamily="@font/roboto_regular"
        android:inputType="textEmailAddress"
        android:layout_below="@id/et_name"
        android:background="@drawable/et_custom"
        android:layout_marginTop="5dp"
        android:textColor="@color/dark_blue"
        android:textSize="15sp" />

    <View
        android:id="@+id/line_email"
        android:layout_width="918dp"
        android:layout_height="1dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/et_email"
        android:layout_marginTop="-5dp"
        android:background="@drawable/login_line" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/password"
        android:textColorHint="@color/dark_blue"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="15dp"
        android:fontFamily="@font/roboto_regular"
        android:inputType="textPassword"
        android:layout_below="@id/et_email"
        android:background="@drawable/et_custom"
        android:layout_marginTop="5dp"
        android:textColor="@color/dark_blue"
        android:textSize="15sp" />

    <View
        android:id="@+id/line_password"
        android:layout_width="918dp"
        android:layout_height="1dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/et_password"
        android:layout_marginTop="-5dp"
        android:background="@drawable/login_line" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Phone Number"
        android:textColorHint="@color/dark_blue"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="15dp"
        android:fontFamily="@font/roboto_regular"
        android:inputType="textPhonetic"
        android:layout_below="@id/et_password"
        android:background="@drawable/et_custom"
        android:layout_marginTop="5dp"
        android:textColor="@color/dark_blue"
        android:textSize="15sp" />

    <View
        android:id="@+id/line_phone"
        android:layout_width="918dp"
        android:layout_height="1dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/et_phone"
        android:layout_marginTop="-5dp"
        android:background="@drawable/login_line" />


    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:background="@drawable/btn_custom"
        android:layout_below="@id/et_phone"
        android:layout_marginTop="20dp"
        android:text="@string/register"/>


    <Button
        android:id="@+id/swipeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="21"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="27dp"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/ic_arrow_left_white" />

    <!--bottom dock base-->
    <ImageView
        android:id="@+id/bottom_base"
        android:layout_width="800dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-15dp"
        android:layout_marginEnd="-15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="650dp"
        android:src="@drawable/ic_dock_base"/>

    <!--dock scan-->
    <Button
        android:id="@+id/scan_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="190dp"
        android:background="@drawable/ic_scan_icon"
        android:layout_marginTop="685dp" />

    <!--dock home-->
    <Button
        android:id="@+id/home_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_dock_home"
        android:layout_marginTop="685dp" />

    <!--dock profile-->
    <Button
        android:id="@+id/profile_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="110dp"
        android:background="@drawable/ic_dock_profile"
        android:layout_marginTop="690dp" />

    <!--dock forum-->
    <Button
        android:id="@+id/forum_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="280dp"
        android:background="@drawable/ic_dock_forum"
        android:layout_marginTop="690dp" />

    <!--dock recipe-->
    <Button
        android:id="@+id/recipe_button"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="360dp"
        android:background="@drawable/ic_dock_add_recipe"
        android:layout_marginTop="692dp" />
</RelativeLayout>