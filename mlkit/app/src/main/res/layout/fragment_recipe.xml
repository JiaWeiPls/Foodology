<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.google.firebase.samples.apps.mlkit.Register">

    <ImageView
        android:id="@+id/elipse"
        android:layout_width="match_parent"
        android:layout_height="396dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-160dp"
        android:scaleY="-1"
        android:src="@drawable/ic_elipse_orange" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:rotation="15"
        android:src="@drawable/foodology_removebg_preview__1_" />

    <ImageView
        android:id="@+id/charPNG"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/kindpng_1214636" />


    <ImageButton
        android:id="@+id/buttonChef"
        android:layout_width="87dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="7dp"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:src="@drawable/ic_chef" />

    <Button
        android:id="@+id/swipeLeft"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="21"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="27dp"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/ic_arrow_left_white" />

    <!--bottom dock base-->
    <ImageView
        android:id="@+id/bottom_base"
        android:layout_width="800dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-15dp"
        android:layout_marginEnd="-15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="650dp"
        android:src="@drawable/ic_dock_base"/>

    <!--dock scan-->
    <Button
        android:id="@+id/scan_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="190dp"
        android:background="@drawable/ic_scan_icon"
        android:layout_marginTop="685dp" />

    <!--dock home-->
    <Button
        android:id="@+id/home_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_dock_home"
        android:layout_marginTop="685dp" />

    <!--dock profile-->
    <Button
        android:id="@+id/profile_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="110dp"
        android:background="@drawable/ic_dock_profile"
        android:layout_marginTop="690dp" />

    <!--dock forum-->
    <Button
        android:id="@+id/forum_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="280dp"
        android:background="@drawable/ic_dock_forum"
        android:layout_marginTop="690dp" />

    <!--dock recipe-->
    <Button
        android:id="@+id/recipe_button"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="360dp"
        android:background="@drawable/ic_dock_add_recipe"
        android:layout_marginTop="692dp" />

    <FrameLayout
        android:id="@+id/infoPanel"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/panel"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignBottom="@id/charPNG"
            android:layout_gravity="center" app:srcCompat="@drawable/panel_shadow" />

        <FrameLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/fire"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="87dp"
                app:srcCompat="@drawable/ic_fire" />

            <TextView
                android:id="@+id/numCals"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="17dp"
                android:text="163 cals"
                android:textSize="15dp"
                android:gravity="top"
                />

            <ImageView
                android:id="@+id/clock"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="-13dp"
                app:srcCompat="@drawable/ic_clock" />

            <TextView
                android:id="@+id/numTime"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="-83dp"
                android:text="30 mins"
                android:textSize="15dp"
                android:gravity="top"
                />

        </FrameLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/recipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Egg Fried Rice"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/profile_pic" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="by Mark Tan"
        android:textColor="@color/light_orange"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="395dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Ingredients"
        android:textColor="@color/dark_blue"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="30dp"/>


    <!--icon base shape 2-->
    <View
        android:id="@+id/square_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="309dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/ic_icon_base" />

    <View
        android:id="@+id/square_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="230dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/ic_icon_base3" />

    <View
        android:id="@+id/square_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="330dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/ic_icon_base4" />

    <View
        android:id="@+id/square_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/ic_icon_base2" />


    <ImageView
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-39dp"
        android:layout_marginTop="467dp"
        android:src="@drawable/chicken" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-134dp"
        android:layout_marginTop="468dp"
        android:src="@drawable/egg" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="323dp"
        android:layout_marginTop="467dp"
        android:src="@drawable/springonion" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="467dp"
        android:src="@drawable/watermelon" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Description"
        android:textColor="@color/dark_blue"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/descriptionBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Chinese Egg Fried Rice is a featured Chinese dish popular all over the country. Chinese people stir fry rice with different side ingredients and seasonings, thus there come different types of fried rice."
        android:textColor="@color/dark_blue"
        android:textSize="12sp"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

</RelativeLayout>